<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charlesdrews.hud">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.charlesdrews.hud.PlaceholderAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name=".Weather.WeatherContentProvider"
            android:authorities="com.charlesdrews.hud.Weather.WeatherContentProvider"
            android:label="@string/weather_provider_label"
            android:exported="false"
            android:syncable="true"/>

        <service
            android:name=".Weather.WeatherSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/weather_sync_adapter" />
        </service>

        <provider
            android:name=".Twitter.TwitterContentProvider"
            android:authorities="com.charlesdrews.hud.Twitter.TwitterContentProvider"
            android:label="@string/twitter_provider_label"
            android:exported="false"
            android:syncable="true"/>

        <service
            android:name=".Twitter.TwitterSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/twitter_sync_adapter" />
        </service>

        <provider
            android:name=".News.NewsContentProvider"
            android:authorities="com.charlesdrews.hud.News.NewsContentProvider"
            android:label="@string/news_provider_label"
            android:exported="false"
            android:syncable="true"/>

        <service
            android:name=".News.NewsSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/news_sync_adapter" />
        </service>

    </application>
</manifest>
